<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controllers.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerAddToCart</servlet-name>
        <servlet-class>controllers.CustomerAddToCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClearCartAfterBuying</servlet-name>
        <servlet-class>controllers.ClearCartAfterBuying</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuestToCustomerTransition</servlet-name>
        <servlet-class>controllers.GuestToCustomerTransition</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerAddToCart</servlet-name>
        <url-pattern>/CustomerAddToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClearCartAfterBuying</servlet-name>
        <url-pattern>/ClearCartAfterBuying</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>catalogue.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>GuestToCustomerTransition</servlet-name>
        <url-pattern>/GuestToCustomerTransition</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/urlError.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500Error.jsp</location>
    </error-page>
</web-app>
